<Rinsan>
    <append xpath="/recipes">
        <!-- 一盒 .44 马格南子弹 -->
        <recipe name="ammoBundle44MagnumBulletBall" count="1" craft_area="workbench" craft_time="120" always_unlocked="true" tags="workbenchCrafting">
            <ingredient name="resourceGunPowder" count="200"/>
            <ingredient name="resourceBulletTip" count="100"/>
            <ingredient name="resourceBulletCasing" count="100"/>
        </recipe>

        <!-- 一盒霰弹 -->
        <recipe name="ammoBundleShotgunShell" count="1" craft_area="workbench" craft_time="120" always_unlocked="true" tags="workbenchCrafting">
            <ingredient name="resourceGunPowder" count="200"/>
            <ingredient name="resourceBulletTip" count="100"/>
            <ingredient name="resourceBulletCasing" count="100"/>
        </recipe>

        <!-- 一盒 9mm 子弹 -->
        <recipe name="ammoBundle9mmBulletBall" count="1" craft_area="workbench" craft_time="120" always_unlocked="true" tags="workbenchCrafting">
            <ingredient name="resourceGunPowder" count="200"/>
            <ingredient name="resourceBulletTip" count="100"/>
            <ingredient name="resourceBulletCasing" count="100"/>
        </recipe>

        <!-- 一盒 7.62 mm 子弹 -->
        <recipe name="ammoBundle762mmBulletBall" count="1" craft_area="workbench" craft_time="120" always_unlocked="true" tags="workbenchCrafting">
            <ingredient name="resourceGunPowder" count="200"/>
            <ingredient name="resourceBulletTip" count="100"/>
            <ingredient name="resourceBulletCasing" count="100"/>
        </recipe>

        <!-- 弹壳 -->
        <recipe name="resourceBulletCasing" count="1" material_based="true" craft_area="forge" is_trackable="false" tags="perkAdvancedEngineering">
            <ingredient name="unit_brass" count="5"/>
            <ingredient name="unit_clay" count="1"/>
            <effect_group>
                <passive_effect name="CraftingIngredientCount" operation="perc_add" level="0,1,2,3,4" value=".25,.25,.25,.12,.06" tags="unit_brass"/>
            </effect_group>
        </recipe>

        <!-- 弹尖 -->
        <recipe name="resourceBulletTip" count="1" material_based="true" craft_area="forge" is_trackable="false" tags="perkAdvancedEngineering">
            <ingredient name="unit_lead" count="2"/>
            <ingredient name="unit_clay" count="1"/>
            <effect_group>
                <passive_effect name="CraftingIngredientCount" operation="perc_add" level="0,1,2,3,4" value=".25,.25,.25,.12,.06" tags="unit_lead"/>
            </effect_group>
        </recipe>

    </append>
</Rinsan>
